[includes]
paths = [
    "kra-lint-01.toml",
    "kra-lint-02.hjson",
    "kra-lint-03.ron",
    "kra-lint-04.yaml",
    "test-subfolder/kra-lint.toml",
]

[prohibit_kseexpr]

[malformed_document]

[prohibit_custom_palettes]

[prohibit_compositions]

[non_default_blending]

[surface_names]
    [surface_names.layer_names]
    paint_layers  = { not = { regex = '^(Paint Layer|ペイントレイヤー) \d+$'         }}
    group_layers  = { not = { regex = '^(Group|グループ化) \d+$'                     }}
    clone_layers  = { not = { regex = '^(Clone Layer|クローンレイヤー) \d+$'         }}
    vector_layers = { not = { regex = '^(Vector Layer|ベクターレイヤー) \d+$'        }}
    filter_layers = { not = { regex = '^(Filter Layer|フィルタレイヤー) \d+ \(.*\)$' }}
    fill_layers   = { not = { regex = '^(Fill Layer|塗りつぶしレイヤー) \d+$'        }}
    file_layers   = { not = { regex = '^(File Layer|ファイル参照レイヤー) \d+$'      }}

    [surface_names.mask_names]
    transparency_masks = { not = { regex = '^(Transparency Mask|透過マスク) \d+$'      }}
    filter_masks       = { not = { regex = '^(Filter Mask|フィルタマスク) \d+ \(.*\)$' }}
    colorize_masks     = { not = { regex = '^(Colorize Mask|自動塗り分けマスク) \d+$'  }}
    transform_masks    = { not = { regex = '^(Transform Mask|変形マスク) \d+$'         }}
    local_selections   = { not = { regex = '^(Selection|選択) \d+$'                    }}

[layer_styles]
styleable_layers = false

[file_layers]
file_formats = ["kra", "tga"]
check_missing_files = true

[vector_layers]
font_family = { not = { regex = '^Noto Sans CJK (SC|TC)$' } }

[surface_type]
    [surface_type.layer_types]
    paint_layers = false
    group_layers = false
    clone_layers = false
    vector_layers = false
    filter_layers = false
    fill_layers = false
    file_layers = false

    [surface_type.mask_types]
    transparency_masks = false
    filter_masks = false
    colorize_masks = false
    transform_masks = false
    local_selections = false

[hidden_surface]
hidden_layers = false
hidden_masks = false

[document_name]
document_name = { regex = '^[abcdefg]_\d{4}_(tr|mk|wxp)$' }

[file_name]
file_name = { regex = '^scene_\d{4}_\d{4}\.kra$' }

[document_size]
document_sizes = [
    { width = 1584, height =  884, resolution = 144.0 },
    { width = 1740, height =  972, resolution = 158.0 },
    { width = 1896, height = 1060, resolution = 172.0 },
    { width = 2052, height = 1148, resolution = 186.0 },
    { width = 2208, height = 1236, resolution = 200.0 },

    { width = [128, 256, 512], height = [128, 256, 512], resolution = 72.0 },
]

[colorspace]
colorspace = "RGBA"
profile = "sRGB-elle-V2-srgbtrc.icc"

[software_version]
software_versions = ["5.1.3", "5.1.4"]

[animation]
framerate = 24
animated_layers = false
animated_masks = false

[copyright]
copyright_line = "Copyright (c) 2023 <example-studio>, All rights reserved"
copyright_disclaimer = """
This document is confidential property of <example-studio>.
Reproduction in whole or in part without permission is prohibited.
"""
studio_name = "<example-studio>"
ensure_initial_author_exists = true
ensure_author_exists = true
